# Database Configuration
DATABASE_URL=postgresql://fediplace:dev_password@localhost:5432/fediplace
FEDIPLACE_DB__DATABASE_URL=postgresql://fediplace:dev_password@localhost:5432/fediplace

# Database credentials for Docker Compose
POSTGRES_DB=fediplace
POSTGRES_USER=fediplace
POSTGRES_PASSWORD=dev_password

# Redis Cache
FEDIPLACE_REDIS__REDIS_URL=redis://localhost:6379

# Authentication & Security
FEDIPLACE_AUTH__SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_BYTES_LONG
FEDIPLACE_AUTH__COOKIE_SECURE=false  # Set to true in production with HTTPS

# Google OAuth (get from https://console.cloud.google.com/)
FEDIPLACE_AUTH__GOOGLE_CLIENT_ID=your_google_client_id
FEDIPLACE_AUTH__GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (for production)
FEDIPLACE_AUTH__EMAIL__EMAIL_BACKEND=console
FEDIPLACE_AUTH__EMAIL__SMTP__HOST=smtp.your-provider.com
FEDIPLACE_AUTH__EMAIL__SMTP__PORT=587
FEDIPLACE_AUTH__EMAIL__SMTP__USERNAME=your_smtp_username
FEDIPLACE_AUTH__EMAIL__SMTP__PASSWORD=your_smtp_password
FEDIPLACE_AUTH__EMAIL__SMTP__FROM_EMAIL=noreply@your-domain.com
FEDIPLACE_AUTH__EMAIL__SMTP__USE_TLS=true

